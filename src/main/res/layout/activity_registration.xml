<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        app:cardCornerRadius="56dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/person_foreground" />

    </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/display_picture"
            android:layout_width="36dp"
            android:layout_height="42dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="bottom|right"
            android:contentDescription="add"
            app:maxImageSize="25dp"
            app:fabCustomSize="35dp"
            app:srcCompat="@drawable/camera_add_svgrepo_com"/>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="match_parent"
        android:backgroundTint="#ECF1F4"
        android:outlineSpotShadowColor="@color/black"
        android:elevation="20dp">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            app:startIconDrawable="@drawable/person"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="@color/black"
            android:backgroundTint="@color/white"
            app:startIconTint="@color/black"
            app:hintTextAppearance="@style/MyHintTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center_horizontal"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            app:startIconDrawable="@drawable/email_svgrepo_com"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/grey"
            app:boxStrokeColor="@color/black"
            app:startIconTint="@color/black"
            app:hintTextAppearance="@style/MyHintTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:hint="Enter password"
                app:startIconDrawable="@drawable/password_svgrepo_com"
                android:textColorHint="@color/grey"
                app:boxStrokeColor="@color/black"
                app:endIconMode="password_toggle"
                android:backgroundTint="@color/white"
                app:endIconTint="@color/black"
                app:startIconTint="@color/black"
                app:hintTextAppearance="@style/MyHintTextAppearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:hint="Enter address"
                app:startIconDrawable="@drawable/address_location_map_svgrepo_com"
                android:textColorHint="@color/grey"
                app:boxStrokeColor="@color/black"
                android:backgroundTint="@color/white"
                app:startIconTint="@color/black"
                app:hintTextAppearance="@style/MyHintTextAppearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/faceRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="16dp"
                android:backgroundTint="#8CC4F1"
                android:visibility="gone"
                android:contentDescription="Register face"
                android:foregroundGravity="center_horizontal"
                android:text="Register face"
                app:icon="@drawable/plus" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>